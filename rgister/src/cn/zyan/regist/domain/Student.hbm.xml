<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping	package="cn.zyan.regist.domain">
	<class name="Student"  table="t_student">
		<id name = "sid" column = "studentid">
			<generator class="native"></generator>
		</id>
		<property name="name" column = "name" length = "20"></property>
		<property name="number" column = "number"></property>
		<property name="password" column ="password"></property>
		<property name="department" column = "department"></property>
		<property name="email" column = "email"></property>
		<property name="status" column = "status"></property>
		<property name="validateCode" column = "validateCode"></property>
		<property name="registerTime" column = "registerTime"></property>
	</class>
</hibernate-mapping>
